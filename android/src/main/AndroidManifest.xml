<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gridconsole.wallpaper">

    <application
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme="@style/AppTheme"
        android:supportsRtl="true">

        <!-- Live Wallpaper Service -->
        <service
            android:name="com.gridconsole.wallpaper.GridConsoleWallpaperService"
            android:label="@string/wallpaper_name"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>

        <!-- Overlay Activity running Python renderer -->
        <activity
            android:name="com.gridconsole.wallpaper.GridConsoleOverlayActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/OverlayTheme" />

        <!-- Optional Settings Activity -->
        <activity
            android:name="com.gridconsole.wallpaper.WallpaperSettingsActivity"
            android:exported="true"
            android:label="@string/settings_name"
            android:theme="@style/AppTheme" />
    </application>
</manifest>
